// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-l": "editor::ToggleInlayHints",
      "ctrl-y": "editor::ConfirmCompletion"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space a": "editor::ToggleCodeActions",
      "space f": "file_finder::Toggle",
      "space o": "tab_switcher::Toggle",
      "space e ": "pane::CloseActiveItem",
      "ctrl-b": "project_panel::ToggleFocus",
      "space d": "diagnostics::Deploy",
      "space /": "workspace::NewSearch",
      "space v": "editor::ToggleInlineDiagnostics",
      "space f p": "projects::OpenRecent",
      "[ d ": "editor::GoToDiagnostic",
      "] d ": "editor::GoToPreviousDiagnostic"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-x": "editor::ToggleBreakpoint"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Open file finder
      "space f": "file_finder::Toggle",
      // Open recent project
      "space f p": "projects::OpenRecent"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t ": "workspace::NewTerminal",
      "ctrl-x": "pane::CloseActiveItem",
      "ctrl-p": null
    }
  },
  {
    "context": "Dock || Terminal || Editor || ProjectPanel",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-z": "workspace::ToggleZoom",
      "ctrl-x": "tab_switcher::CloseSelectedItem",
      "ctrl-a j ": "terminal_panel::Toggle",
      "ctrl-shift-n": "workspace::Open"
    }
  }
]
