// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-l": "editor::ToggleInlayHints",
      "ctrl-y": "editor::ConfirmCompletion",
    },
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space a": "editor::ToggleCodeActions",
      "space f": "file_finder::Toggle",
      // "space d": "pane::CloseActiveItem",
      "space o": "tab_switcher::Toggle",
      "ctrl-b": "workspace::ToggleLeftDock",
      "space d": "diagnostics::Deploy",
      "space /": "workspace::NewSearch",
      "space v": "editor::ToggleInlineDiagnostics",
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !VimCount",
    "bindings": {
      "0": [
        "vim::StartOfLine",
        {
          "displayLines": true
        }
      ],
      "$": [
        "vim::EndOfLine",
        {
          "displayLines": true
        }
      ]
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Open file finder
      "space space": "file_finder::Toggle",
      // Open recent project
      "space f p": "projects::OpenRecent"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t ": "workspace::NewTerminal",
    }
  },
  {
    "context": "Dock || Terminal || Editor || ProjectPanel",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-z": "workspace::ToggleZoom",
      "ctrl-x": "tab_switcher::CloseSelectedItem",
      "ctrl-a j ": "terminal_panel::Toggle",
    },
  },
]
